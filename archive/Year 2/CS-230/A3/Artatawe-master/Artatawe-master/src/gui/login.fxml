<VBox xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LoginController">
   <children>
      <AnchorPane prefHeight="405.0" prefWidth="508.0">
         <children>
            <Label alignment="BASELINE_CENTER" contentDisplay="CENTER" layoutX="86.0" layoutY="43.0" prefHeight="69.0" prefWidth="396.0" text="Artatawe" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="System Font" size="41.0" />
               </font>
            </Label>
            <Label alignment="BASELINE_LEFT" layoutX="14.0" prefHeight="69.0" prefWidth="396.0" text="Welcome to " wrapText="true">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Label layoutX="116.0" layoutY="192.0" text="Login:" />
            <TextField fx:id="txtLogin" layoutX="201.0" layoutY="187.0" promptText="User ID" />
